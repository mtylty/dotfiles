[user]
  name = Matteo Latini
  email = matteolatini@nebulab.it
[github]
  user = mtylty
[core]
  editor = /usr/bin/vim
[alias]
  s = status
  co = checkout
  ci = commit
  d = diff --color-words
  a = add
  pl = pull
  ps = push
  rb = rebase
  lg = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(dim white)- %an%C(reset)%C(bold yellow)%d%C(reset)'
  l = !git lg -25
[color]
  ui = true
[push]
  default = current
[pull]
  rebase = true
[filter "media"]
  clean = git-media-clean %f
  mudge = git-media-smudge %f
[diff]
  compactionHeuristic = true
[credential]
  helper = osxkeychain
[commit]
  template = ~/.gitmessage
[filter "lfs"]
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
  process = git-lfs filter-process
  required = true
